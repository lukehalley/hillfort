<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_margin="15dp"
    android:elevation="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/cardHillfortTitle"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardHillfortLocation"
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cardHillfortDescription"
                android:layout_width="286dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cardRatingNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="invisible" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/starRatingIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/green_star" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/favouritedIcon"
                        android:layout_width="22.5dp"
                        android:layout_height="22.5dp"
                        android:foregroundGravity="center"
                        android:visibility="visible"
                        app:srcCompat="@drawable/outline_green_heart" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/visitedIndicator"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/colorDisabled"
            android:ems="10"
            android:inputType="none|textPersonName"
            android:text="@string/notVisited"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.v7.widget.CardView>